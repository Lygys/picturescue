<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3>Log in</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5 form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-5 form-control"  %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Log in", class: "btn btn-success col-md-2" %>
        </div>
      <% end %>
      <div class="form-group mx-auto">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
