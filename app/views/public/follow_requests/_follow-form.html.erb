<% if current_user.follow_requesting?(user) %>
  <%= form_with url: follow_request_path(user), method: :delete, local: true do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :follow_id, value: user.id %>
    <%= f.submit 'Remove Request', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with url: follow_requests_path(user), local: true do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :follow_id, value: user.id %>
    <%= f.submit 'Follow Request', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>