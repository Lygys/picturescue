<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3>Sign up</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "col-md-5 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "col-md-5 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-5 form-control" %>
        </div>

        <div class="form-group actions">
          <%= f.submit "Sign up", class: "btn btn-success col-md-2" %>
        </div>
      <% end %>

      <div class="form-group mx-auto">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
