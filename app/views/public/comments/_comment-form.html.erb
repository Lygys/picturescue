<%= form_with(model:[post, comment], remote: true) do |f| %>
  <div id="comments-error">
    <%= render 'layouts/errors', obj: comment %>
  </div>
  <div class="form-group">
    <%= f.text_area :comment, rows: '5', placeholder: "Comment Here", class: "form-control InputComment" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信", class: 'btn btn-success' %>
  </div>
<% end %>