<div class='container'>
  <div class='row'>
    <div class='col-lg-9'>
      <h3>フォロワー一覧</h3>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg") %></td>
              <td><%= user.name %></td>
              <td>
                Following:
                <%= link_to followings_user_path(user) do %>
                  <%= user.followings.count %>
                <% end %>
              </td>
              <td>
                Followers:
                <%= link_to followers_user_path(user) do %>
                  <%= user.followers.count %>
                <% end %>
              </td>

               <% if current_user.followed_by?(user) %>
                <td><%= render 'public/relationships/block-form', user: user %></td>
              <% else %>
                <td></td>
              <% end %>

              <% if current_user == user %>
                <td></td>
              <% elsif current_user.following?(user) %>
                <td><%= render 'public/relationships/remove-form', user: user %></td>
              <% else %>
                <td><%= render 'public/follow_requests/follow-form', user: user %></td>
              <% end %>
              <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col-lg-2 offset-lg-1'>
      <%= render 'public/users/info', user: current_user %>
    </div>
  </div>
</div>