<div class='container'>
  <div class='row'>
    <div class="col-md-8 mx-auto">
      <h3>User info</h3>
      <%= form_with model: @user, local:true do |f| %>

        <%= render 'layouts/errors', obj: @user %>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: "col-md-5 form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-5 form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br />
          <%= f.attachment_field :profile_image, class: "form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, class: "col-md-8 form-control", style: 'height: 150px;' %>
        </div>
        <div class="form-group">
          <%= f.submit "Edit Profile", class: "btn btn-success col-md-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>