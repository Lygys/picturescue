<div class='container'>
   <div class='row'>
    <div class='col-md-8 mx-auto'>
      <%= form_with(model: @offense, url: admin_offense_path, method: :patch, local:true) do |f| %>
        <%= render 'layouts/errors', obj: @offense %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "送信", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>